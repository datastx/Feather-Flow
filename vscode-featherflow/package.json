{
  "name": "featherflow",
  "displayName": "Feather-Flow",
  "description": "SQL transformation tooling for Feather-Flow projects",
  "version": "0.1.0",
  "publisher": "datastx",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/datastx/Feather-Flow",
    "directory": "vscode-featherflow"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/featherflow.yml",
    "workspaceContains:**/featherflow.yaml"
  ],
  "main": "./dist/extension.cjs",
  "contributes": {
    "commands": [
      {
        "command": "featherflow.openSchema",
        "title": "Feather-Flow: Toggle SQL/YAML Schema"
      },
      {
        "command": "featherflow.refreshIndex",
        "title": "Feather-Flow: Refresh Project Index"
      }
    ],
    "keybindings": [
      {
        "command": "featherflow.openSchema",
        "key": "cmd+shift+y",
        "mac": "cmd+shift+y",
        "win": "ctrl+shift+y",
        "linux": "ctrl+shift+y",
        "when": "editorTextFocus && resourceExtname =~ /\\.(sql|yml|yaml)/"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "featherflow",
          "title": "Feather-Flow",
          "icon": "resources/featherflow.svg"
        }
      ],
      "panel": [
        {
          "id": "featherflowPanel",
          "title": "Feather-Flow",
          "icon": "resources/featherflow.svg"
        }
      ]
    },
    "views": {
      "featherflow": [
        {
          "id": "featherflowModels",
          "name": "Models"
        }
      ],
      "featherflowPanel": [
        {
          "id": "featherflowLineage",
          "name": "Model Lineage",
          "type": "webview"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "featherflowModels",
        "contents": "No Feather-Flow project found.\n\nMake sure your workspace contains a featherflow.yml file and the `ff` binary is installed.\n[Open Settings](command:workbench.action.openSettings?%22featherflow%22)"
      }
    ],
    "configuration": {
      "title": "Feather-Flow",
      "properties": {
        "featherflow.binaryPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the ff binary. Leave empty to use PATH."
        },
        "featherflow.projectDir": {
          "type": "string",
          "default": "",
          "description": "Path to the Feather-Flow project directory. Leave empty to auto-detect from workspace."
        }
      }
    }
  },
  "scripts": {
    "build": "node esbuild.js",
    "build:production": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "overrides": {
    "undici": "^6.21.1"
  }
}
