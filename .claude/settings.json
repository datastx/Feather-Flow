{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "make fmt-check 2>/dev/null || true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit.*\\.rs$",
        "hooks": [
          {
            "type": "command",
            "command": "make check 2>&1 | head -20"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(cargo *)",
      "Bash(make *)",
      "Bash(cat *)",
      "Bash(ls *)"
    ]
  }
}
